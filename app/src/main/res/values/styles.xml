<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="textSection">
        <item name="android:background">@color/titleBg</item>
        <item name="android:textColor">@color/titleClr</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/section_size</item>
    </style>

    <style name="textSection.Title" parent="textSection">
        <item name="android:textSize">@dimen/title_size</item>
    </style>
</resources>
